    <!-- Views -->
    <attr name="defaultTextInputStyle" format="reference" />

    <declare-styleable name="Toolbar">
        <attr name="contentBackground" format="reference|color" />
        <attr name="dividerVisible" format="boolean" />
        <attr name="titleText" format="string" />
        <attr name="iconRight" format="reference|color" />
        <attr name="textRight" format="string" />
        <attr name="homeButtonIcon" format="reference|color" />
        <attr name="homeButtonVisible" format="boolean" />
        <attr name="titleTextAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="LabeledTextView">
        <attr name="label" format="string" />
        <attr name="message" format="string" />
        <attr name="actionIcon" format="reference|color" />
        <attr name="textIcon" format="reference|color" />
        <attr name="enabled" format="boolean" />
        <attr name="android:singleLine" />

        <attr name="messageStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AccountInfoView">
        <attr name="accountActionIcon" format="reference|color" />
        <attr name="textVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InputField">
        <attr name="android:inputType" />
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="AmountView">
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="TableCellView">
        <attr name="title" />
        <attr name="dividerVisible" />
        <attr name="dividerColor" format="color" />
        <attr name="primaryValueIcon" format="reference|color" />
        <attr name="primaryValueStyle" format="enum">
            <enum name="text" value="0" />
            <enum name="link" value="1" />
        </attr>
        <attr name="titleIcon" format="reference|color" />
        <attr name="primaryValueIconTint" format="color" />
    </declare-styleable>

    <declare-styleable name="TableView">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="GoNextView">
        <attr name="inProgress" format="boolean" />
        <attr name="android:text" />
        <attr name="icon" />
        <attr name="actionIcon" />
        <attr name="dividerVisible" />
        <attr name="android:textAppearance" format="reference" />
        <attr name="actionTint" format="color" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="PrimaryButton">
        <attr name="appearance" format="enum">
            <enum name="primary" value="0" />
            <enum name="primaryTransparent" value="1" />
            <enum name="secondary" value="2" />
            <enum name="secondaryTransparent" value="3" />
        </attr>

        <attr name="size" format="enum">
            <enum name="large" value="0" />
            <enum name="small" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PlaceholderView">
        <attr name="android:text" />
        <attr name="image" format="color|reference" />
        <attr name="showBackground" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TitleImageContentSectionView">
        <attr name="sectionTitle" format="string" />
        <attr name="sectionContentEndIcon" format="reference|color" />
        <attr name="sectionContentEndIconTint" format="color" />
    </declare-styleable>

    <declare-styleable name="SearchViewOld">
        <attr name="android:hint" />
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="Switch">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="dividerVisible" />
    </declare-styleable>

    <declare-styleable name="AdvertisementCard">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="image" />
        <attr name="learnMore" format="string" />
        <attr name="action" format="string" />
    </declare-styleable>

    <declare-styleable name="AlertView">
        <attr name="style" format="enum">
            <enum name="warning" value="0" />
            <enum name="error" value="1" />
        </attr>

        <attr name="android:text" />
    </declare-styleable>


    <!--    LAGUNA RES -->
    <declare-styleable name="SearchView">
        <attr name="sv_text" format="string" />
        <attr name="sv_text_hint" format="string" />
        <attr name="sv_button_ic_start" format="reference" />
        <attr name="sv_button_ic_end" format="reference" />
        <attr name="sv_button_text_end" format="string" />
        <attr name="sv_button_color_end" format="reference" />

    </declare-styleable>
    <declare-styleable name="InputFieldView">
        <attr name="if_title" format="string" />
        <attr name="if_title_desc" format="string" />
        <attr name="if_text" format="string" />
        <attr name="if_text_hint" format="string" />
        <attr name="if_label_visible" format="boolean" />
        <attr name="if_label_hint" format="string" />
        <attr name="if_multiline" format="boolean" />
        <attr name="if_show_title" format="boolean" />
        <attr name="if_show_clear" format="boolean" />
        <attr name="if_button_ic_start" format="reference" />
        <attr name="if_button_ic_end" format="reference" />
        <attr name="if_input_type" format="enum">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
        </attr>
        <attr name="if_ime_option" format="enum">
            <enum name="done" value="0" />
            <enum name="next" value="1" />
        </attr>

    </declare-styleable>
    <declare-styleable name="PasswordInputFieldView">
        <attr name="password_title" format="string" />
        <attr name="password_text" format="string" />
        <attr name="password_text_hint" format="string" />
        <attr name="password_type" format="enum">
            <enum name="input" value="0" />
            <enum name="check" value="1" />
        </attr>
        <attr name="password_ime_option" format="enum">
            <enum name="done" value="0" />
            <enum name="next" value="1" />
        </attr>

    </declare-styleable>
    <declare-styleable name="RectButtonView">
        <attr name="rect_button_type" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="tertiary" value="2" />
        </attr>
        <attr name="rect_button_size" format="enum">
            <enum name="large" value="0" />
            <enum name="medium" value="1" />
            <enum name="small" value="2" />
        </attr>
        <attr name="rect_button_gravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="rect_button_text" format="string" />
        <attr name="rect_button_ic_start" format="reference" />
        <attr name="rect_button_ic_end" format="reference" />
        <attr name="rect_button_is_progress" format="boolean" />
        <attr name="rect_button_enabled" format="boolean" />

    </declare-styleable>
    <declare-styleable name="PillButtonView">
        <attr name="pill_button_type" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
        </attr>
        <attr name="pill_button_size" format="enum">
            <enum name="large" value="0" />
            <enum name="medium" value="1" />
            <enum name="small" value="2" />
        </attr>
        <attr name="pill_button_gravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="pill_button_text" format="string" />
        <attr name="pill_button_ic_start" format="reference" />
        <attr name="pill_button_ic_end" format="reference" />
        <attr name="pill_button_is_progress" format="boolean" />
        <attr name="pill_button_enabled" format="boolean" />

    </declare-styleable>
    <declare-styleable name="SocialButtonView">
        <attr name="social_text" format="string" />
        <attr name="social_enabled" format="boolean" />
        <attr name="social_icon" format="reference" />

    </declare-styleable>
    <declare-styleable name="RegisterIndicatorView">
        <attr name="pi_progress" format="integer" />
    </declare-styleable>
